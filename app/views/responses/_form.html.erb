<div class="row">
  <%= form_for(@response) do |f| %>
  <form>
      <div class="form-group col-sm-6">
        <%= f.label :name, 'Full Name' %><br>
        <%= f.text_field :name, :class=>"form-control" %>
      </div>
      <div class="form-group col-sm-6">
        <%= f.label :phone, 'Phone Number' %><br>
        <%= f.text_field :phone, :class=>"form-control" %>
      </div>
      <div class="form-group col-sm-6">
        <%= f.label :email, 'E-Mail'%><br>
        <%= f.text_field :email, :class=>"form-control" %>
      </div>
       <div class="form-group col-sm-6">
        <%= f.label :meal %><br>
        <%= f.select(:meal, [['Type A', 'Type A'],
                            ['Type B', 'Type B'],
                            ['Type C', 'Type C'],
                            ['Type D', 'Type D'],
                            ['Type E', 'Type E']
                           ],{ :prompt => "Preference"} , :class=>"form-control"
                           ) 
                           %>
      </div>
    <!--   <div class="field">
        <%= f.label :guests, "# of Guest" %><br>
        <%= f.number_field :guests %>
      </div> -->
      <div class="form-group col-sm-12">
        <%= f.label :note, 'Your Message'%><br>
        <%= f.text_area :note, :class=>"form-control", :rows=>"3"%>
      </div>
      <%= f.submit 'RSVP', class: 'btn btn-default' %>
  </form>
  <% end %>
</div>